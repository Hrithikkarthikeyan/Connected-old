
<div class="container-fluid col-8">
  <% @posts.each do |post| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
          <div class="bg-white p-2">
                  <div class="d-flex flex-row user-info"><img class="rounded-circle" src="<%= asset_path('')%>" width="40">
                      <div class="d-flex flex-column justify-content-start ml-2"><span class="d-block font-weight-bold name"><%= link_to post.account.full_name, account_path(post.account) %></span><span class="date text-black-50"><%= time_ago_in_words(post.created_at) %></span></div>
                      <div><%= link_to "Delete", post_path(post), class: "btn btn-outline-danger float-right", method: :delete, data: {confirm: "Are you sure?"} %></div>
                  </div>
                  
                </div>
          </div>          
         <% if post.image.attached? %>
         <div class="mt-5">
          <%= image_tag post.image %>
         </div>
         <% end %>
          <div class="card-body">
            <p class="card-text"><%= truncate(post.description, length: 100) %></p>
            </div>

            <div class="d-flex justify-content-center row">
        <div class="col-md-12">
            <div class="d-flex flex-column comment-section">
                
                <div class="card bg-white">
                    <div class="d-flex flex-row fs-12">
                        <!-- <div class="like p-2 cursor"><i class="fa fa-thumbs-o-up"><span class="ml-1"  >Like</span></i></div> -->
                        <% if post.is_liked(current_account).present? %>
                          <%= link_to "Like", likes_path(post.is_liked(current_account)), method: :delete, remote: true,
                          class: "like p-3 cursor fa fa-thumbs-o-up"%>
                        <% else %>
                          <%= link_to "Liked", likes_path(post), method: :post, remote: true,
                          class: "like p-3 cursor fa active fa-thumbs-o-up"%>
                        <% end %>
                        <div class="like p-3 cursor"><i class="fa fa-commenting-o"><span class="ml-1">Comment</span></i></div>
                        <div class="like p-3 cursor"><i class="fa fa-share"><span class="ml-1">Share</span></i></div>
                    </div>
                    <div>
                    
                    </div>
                </div>
                <div class="bg-light p-2">
                    <div class="d-flex flex-row align-items-start"><img class="rounded-circle" src="https://i.imgur.com/RpzrMR2.jpg" width="40"><textarea class="form-control ml-1 shadow-none textarea"></textarea></div>
                    <div class="mt-2 text-right"><button class="btn btn-primary btn-sm shadow-none" type="button">Post comment</button><button class="btn btn-outline-primary btn-sm ml-1 shadow-none" type="button">Cancel</button></div>
                </div>
            </div>
        </div>
    </div>
        </div>

      </div>
    </div>
  <% end %>
</div>