</script>

<div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
          <div class="bg-white p-2">
                  <div class="d-flex flex-row user-info">
                  <% if post.account.image.present? %>
                    <%= image_tag(post.account.image.variant(resize_to_fill: [40, 40]), class: "rounded-circle") %>
                  <% else %>
                    <%= image_tag ("empty_profile.jpeg"), class: "rounded-circle profile_pic"%>
                  <% end %>
                    <div class="d-flex flex-column justify-content-start ml-2">
                      <span class="d-block font-weight-bold name"><%= link_to post.account.full_name, account_path(post.account) %> 
                        <% if post.account.company? %>
                            <i class="fa fa-check" style="color: #00FFFF;"></i>
                        <% end %>
                        </span>
                        <span class="date text-black-50"><%= time_ago_in_words(post.created_at) %></span>
                        </div>
                  </div>
                  
                </div>
          </div>          
         <% if post.image.attached? %>
         <div class="mt-5">
          <%= image_tag post.image.variant(resize: "400x400") %>
         </div>
         <% end %>
          <div class="card-body text-left">
            <p class="card-text"><%= truncate(post.description, length: 100) %></p>
            </div>

            <div class="d-flex justify-content-center row ">
              <div class="col-md-12">
                  <div class="d-flex flex-column comment-section">
                      <div class="card bg-white">
                          <div class="d-flex flex-row fs-12">
                              <!-- <div class="like p-2 cursor"><i class="fa fa-thumbs-o-up"><span class="ml-1"  >Like</span></i></div> -->
                              <div id="like-icon-post-<%= post.id.to_s%>">
                              <%= render "like_icon", {is_liked: post.is_liked(current_account), post: post}%>
                              </div>
                              <div class="like p-3 cursor comment"><button onclick="toggleComment(<%= post.id.to_s%>)"><i class="fa fa-commenting-o"><span class="ml-1">Comment</span></i></button></div>
                              <div class="like p-3 cursor"><i class="fa fa-share"><span class="ml-1">Share</span></i></div>
                          </div>
                          <div id="like-text-post-<%= post.id.to_s %>">
                            <%= render "like_text", {likes: post.likes}%>
                          </div>
                      </div>
                      <div class="comment-icon-post-<%= post.id.to_s%> comment-post">
                        <%= render "comment_full", {post: post} %>
                      </div>
                    </div>
            </div>
        </div>
    </div>
        </div>

      </div>