<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<script>
$(".comment-post").hide();
function toggleComment(post_id){
  $(".comment-icon-post-"+post_id).toggle("fast");
}
