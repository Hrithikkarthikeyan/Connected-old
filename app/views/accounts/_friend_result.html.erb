<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card card-header results-block">
  <table class="col-md-12">
    <tbody>
  <% @friends.each do |friend| %>
    <tr>
    <td><strong>Name: </strong> <%= friend.full_name %></td>
    <td><strong>Email: </strong> <%= friend.email %></td>
    <td><strong>Actions: </strong> <%= link_to "View Profile", account_path(friend),   
                                      class: "btn btn-sm btn-success" %>
    <% if current_account.not_friends_with?(friend.id)%>
    <%= link_to 'Connect?', friendships_path(friend: friend),
                            class: "btn btn-sm btn-success", method: :post %>
    <% else %>
      <span class="badge badge-secondar">
        You are connections
        </span>
    <% end  %>
    </td>
                          
    </tr>
  <% end %>
  </tbody>
  </table>
  </div>
<% end %> 