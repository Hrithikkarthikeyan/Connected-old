<h1>Friends</h1>
<div class="w-100 p-3">
<div class="row">
<div class="col-md-6">
<div class='search-area'>
  <h3>Search Friends</h3> 
  <%= form_tag search_friends_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :friend, params[:friend], placeholder: "Name or email", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div id="friend-results">

</div>
</div>
<div class="col-md-6 mt-5">
<h3>Your Connections</h3>
<% if @friends.count > 0 %>
  <%= render 'friends/list' %>
<% else %>
  <h4>Sorry, you have no friends!!!</h4>
<% end %> 
</div>
</div>
</div>