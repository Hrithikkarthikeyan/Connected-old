<h1>Friends</h1>
<div class="w-100 p-3">
<div class="row">
<div class="col-md-6">
<h3>Your Connections</h3>
<% if @friends.count > 0 %>
  <%= render 'friends/list' %>
<% else %>
  <h4>Sorry, you have no friends!!!</h4>
<% end %> 
</div>
<div class="col-md-2">
</div>
<div class="col-md-4">
<% if @requests.count == 0 %>
<h3>You have not requested anyone yet</h3>
<% else %>
<h3>Requested</h3>
  <% @requests.each do |request|%>
  <% acc = Account.find(request.friend_id) %>
  <%= link_to acc.full_name, account_path(acc)%>
        <%= link_to 'Undo Request', request_path(request), method: :delete, data: {confirm: 'Are you sure?'},
                                              class: 'btn btn-sm btn-warning' %><br/>
  <% end %>
<% end %>
<div>
</div>
</div>